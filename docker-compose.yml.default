version: '3.8'
services:

  paraphrase:
    deploy:
      mode: replicated
      replicas: 1
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids: ['0']
            capabilities: [gpu]
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /etc/timezone:/etc/timezone:ro
    build: paraphrase
    ports:
      - 8090:8090
    environment:
      - TZ=Europe/Moscow
      - PORT=8090
      #- CONFIG=paraphraser_bert
      - CONFIG=paraphraser_rubert

  sentiment:
    deploy:
      mode: replicated
      replicas: 0
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids: ['0']
            capabilities: [gpu]
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /etc/timezone:/etc/timezone:ro
    build: sentiment
    environment:
      - TZ=Europe/Moscow